{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./dist",
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": ["src/typings//*.d.ts", "node_modules/@types//*.d.ts"],
  "baseUrl": ".",
  "paths": {
    "components/*": ["src/components/*"],
    "common/*": ["src/common/*"],
    "assets/*": ["src/assets/*"]
  }
}